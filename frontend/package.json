{
  "name": "shramii-hiring-platform",
  "version": "1.0.0",
  "description": "World-class hiring platform for blue-collar workers",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "frontend:dev": "cd frontend && npm start",
    "backend:dev": "cd backend && ./mvnw spring-boot:run",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && ./mvnw clean package",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && ./mvnw dependency:resolve"
  },
  "keywords": [
    "hiring",
    "blue-collar",
    "jobs",
    "workers",
    "platform"
  ],
  "author": "Shramii Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.12.2",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1"
  }
}
